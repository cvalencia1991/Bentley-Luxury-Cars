<div class="w-full">

  <div class="nav_main flex text-white flex-col items-center"> Most recents</div>
  <div class="groups p-4 flex flex-col items-center  ">
    <% @groups.each do |group|%>
      <%=link_to payment_path(group.id)  do%>
        <div id="groups" class="  flex flex-col items-center contents ">
          <div class="flex w-80 bg-white p-3 flex border-2  justify-start gap-3 mt-2 items-center">
          <%= image_tag group.icon, class:"w-20"%>
            <div class="flex flex-col m-1 items-start ">
            <div class="flex w-48 justify-between gap-20 pt-1">
              <%= group.name%>
              <% @total.each do |key, value| %>
                <%if key == group.id%>
                    <strong>$<%= value%></strong>
                  <%end%>
              <%end%>
              </div>
                <div class="line w-48  bg-gray-200 "></div>
                <p class="pt-2"><%= group.created_at.strftime("%d-%m-%Y") %><p>
              </div>
          </div>
        </div>
      <%end%>
    <%end%>
  </div>
</div>
<% if notice.present? %>
  <p class="flex justify-center py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
<%= link_to 'New group', new_group_path, class: "greenbottom text-center py-3 px-5 bg-blue-600 text-white block font-medium" %>
