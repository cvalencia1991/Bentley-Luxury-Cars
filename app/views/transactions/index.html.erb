<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col gap-4 justify-between items-center">
    <h1 class="font-bold text-4xl">Transactions</h1>
  <h2 class="flex justify-center gap-3 my-5 ">
    <strong class="block font-medium mb-1">Total transaction</strong>
    $ <%= @transactions.sum(:amount) %>
  </h2>

    <%= link_to 'New transaction', new_transaction_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="transactions" class="min-w-full">
    <%= render @transactions %>
  </div>
</div>
